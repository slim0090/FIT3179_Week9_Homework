{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "2022 World Population",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "data/world_population.csv",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "data/world_population.csv"
          },
          "key": "Country",
          "fields": ["2022_Population"]
        }
      },
      {"calculate": "datum.2022_Population + 0.1", "as": "World Population"}
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "World Population",
        "type": "quantitative",
        "scale": {"type": "log"}
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "2022_Population", "type": "quantitative"}
      ]
    }
  }